aws emr create-cluster \
    --name "Spark WordCount 1/3" \
    --instance-type m3.xlarge \
    --release-label emr-4.0.0 \
    --log-uri s3://bdnc2/logs/spark_wordcount_1_3 \
    --instance-count 4 \
    --use-default-roles \
    --applications Name=Spark \
    --steps file://../emr_configs/spark_wordcount_step.json \
    --auto-terminate
